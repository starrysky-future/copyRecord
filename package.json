{
  "name": "copyrecord",
  "version": "1.0.0",
  "description": "记录复制的工具，方便再次复制",
  "main": "main.js",
  "scripts": {
    "dev": "nodemon --exec electron . -e js,html",
    "build:win": "electron-builder --win --config --publish always",
    "build:mac-x86": "electron-builder --mac --config --publish always",
    "build:mac-arm64": "electron-builder --arm64 --mac --config --publish always",
    "build:linux": "electron-builder --linux --config --publish always"
  },
  "build": {
    "productName": "copyrecord",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "win": {
      "icon": "./resources/copyRecord.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "./resources/copyRecord.ico"
    },
    "linux": {
      "icon": "./resources/copyRecord.ico"
    }
  },
  "keywords": [
    "复制工具"
  ],
  "author": "Seven7",
  "license": "ISC",
  "devDependencies": {
    "electron": "^24.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
